<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="@integer/integer_0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="@integer/integer_360">
    <!--shape tag is used to build a shape in XML-->
    <shape
        android:innerRadiusRatio="@integer/integer_3"
        android:shape="ring"
        android:thicknessRatio="@integer/integer_8"
        android:useLevel="false">
        <!--set the size of the shape-->
        <size
            android:width="@dimen/spacing_76"
            android:height="@dimen/spacing_76" />
        <!--set the color gradients of the shape-->
        <gradient
            android:angle="@integer/integer_0"
            android:endColor="@color/orange"
            android:startColor="@color/white"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>