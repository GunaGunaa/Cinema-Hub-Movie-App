<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/ChangeTextColour</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    <!--menu bar style-->
    <style name="ChangeTextColour" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/font_19</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>
</resources>